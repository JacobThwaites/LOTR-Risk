{
    "name": "lord-of-the-rings-risk",
    "version": "0.1.0",
    "scripts": {
        "start": "concurrently \"npm run start:frontend\" \"npm run start:server\"",
        "start:frontend": "cd frontend && npm start",
        "start:server": "cd server && npm start",
        "install": "npm run install:frontend && npm run install:server",
        "install:frontend": "cd frontend && npm install",
        "install:server": "cd server && npm install",
        "test": "npm run test:frontend && npm run test:server",
        "test:frontend": "cd frontend && npm test -- --watchAll=false",
        "test:server": "cd server && npm test"
    },
    "dependencies": {
        "concurrently": "^8.2.0"
    }
}
